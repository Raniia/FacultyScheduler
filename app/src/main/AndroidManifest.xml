    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StudentsLogin"
            android:label="@string/title_activity_students_login" >
        </activity>
        <activity
            android:name=".DoctorsHomepage"
            android:label="@string/title_activity_doctors_homepage" >
        </activity>
        <activity
            android:name=".StudentsHomepage"
            android:label="@string/title_activity_students_homepage" >
        </activity>
        <activity
            android:name=".StudentsAppointments"
            android:label="@string/title_activity_students_appointments" >
        </activity>
        <activity
            android:name=".ViewListDoctors"
            android:label="@string/title_activity_view_list_doctors" >
        </activity>
        <activity
            android:name=".DoctorsSchedule"
            android:label="@string/title_activity_doctors_schedule" >
        </activity>
        <activity
            android:name=".SlotDetails"
            android:label="@string/title_activity_slot_details" >
        </activity>
        <activity
            android:name=".ScheduleOfDoctors"
            android:label="@string/title_activity_schedule_of_doctors" >
        </activity>
        <activity
            android:name=".StudentSetAppointmentSaturday"
            android:label="@string/title_activity_student_set_appointment" >
        </activity>

    </application>

</manifest>
