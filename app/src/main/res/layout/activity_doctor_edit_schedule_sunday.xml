<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/back"
    tools:context="com.guc.bachelor.facultyscheduler.doctorEditScheduleSunday">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="  Select all your free timings..."
        android:textSize="20dp"
        android:background="@drawable/loginbutton"
        android:textColor="#FFFFFF"
        android:id="@+id/textView81"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text=" Pick a date "
        android:textSize="15dp"
        android:id="@+id/pickDate"
        android:background="#D3D3D3"
        android:textColor="#000000"
        android:drawableLeft="@drawable/calendar"
        android:layout_above="@+id/ListView01"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="date"
        android:textSize="10dp"
        android:id="@+id/displayDate"
        android:layout_alignBottom="@+id/pickDate"
        android:layout_alignStart="@+id/done" />

    <ListView android:id="@+id/ListView01" android:layout_height="200dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/done"
        android:layout_alignParentStart="true"></ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/done"
        android:layout_alignParentBottom="true"
        android:background="@drawable/loginselector"
        android:textColor="#FFFFFF"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
